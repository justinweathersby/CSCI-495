<div class="container">
    <div class="row">
        <div class="col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Student Lookup</h4>
                </div>
                <div class="panel-body">

                  <%= form_tag lookup_path, :method=> 'get' do%>
                      <div class="form-group">
                        <%= text_field_tag :search, params[:search], class:"form-control input-sm", placeholder: "Last Name"%>
                      </div>
                      <p class="text-center text-muted">
                        or
                      </p>
                      <div class="form-group">
                        <%= text_field_tag :fname, params[:fname], class:"form-control input-sm", placeholder: "First Name"%>
                      </div>
                      <p class="text-center text-muted">
                        or
                      </p>
                      <div class="form-group">
                        <%= text_field_tag :email, params[:email], class:"form-control input-sm", placeholder: "Email Address"%>
                      </div>
                      <%= submit_tag "Search", :lname=>nil, class: "btn btn-primary btn-block" %>
                  <% end %>
            </div>
          </div>
        </div>
        <div class="col-lg-8">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h4>Students</h4>
                </div>
                  <div class="panel-body">
                      <div class="dataTable_wrapper">
                          <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                              <thead>
                                  <tr>
                                    <th>id</th>
                                    <th>Last Name</th>
                                    <th>First Name</th>
                                    <th>Email</th>
                                  </tr>
                              </thead>
                              <tbody>
                                <% if @students.present? %>
                                <% @students.each do |student| %>
                                  <!-- <tr data-href= "<%= student_path(student.id) %>"> -->
                                  <tr onclick="location.href='<%= student_path(student.id) %>'">
                                    <td><%= student.id %></td>
                                    <td><%= student.lname %></td>
                                    <td><%= student.fname %></td>
                                    <td><%= student.email %></td>
                                  </tr>
                                <% end %>
                                <% else %>
                                <tr>
                                  <td colspan="4">
                                    <p class="text-center text-muted">
                                      No Students Found...
                                    </p>
                                  </td>
                                </tr>
                                <% end %>
                              </tbody>
                          </table>
                      </div>
                    </div>
                    <div class=panel-footer>
                      <p class="text-center text-muted">
                        Please select one student from the list above to continue.
                      </p>
                    </div>
                  </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
</div>
